{
    "extends": [
        "stylelint-config-standard-scss",
        "stylelint-config-prettier-scss"
    ],
    "ignoreFiles": [ "!**/*.{scss,css}"],
    "rules": {
        "custom-property-pattern": "^_?([a-z][a-z0-9]*)(-[a-z0-9]+)*$",
        "value-keyword-case": [
            "lower",
            {
                "ignoreKeywords": ["optimizeSpeed"]
            }
        ]
    }
}
